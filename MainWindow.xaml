<Window x:Class="FileDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="650"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="0.6*"/>
        </Grid.ColumnDefinitions>

        <Border Margin="10" Grid.ColumnSpan="2">
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                <TextBox Margin="2" Width="450"></TextBox>
                <Button Margin="2">Path Setting</Button>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.RowSpan="2">
            <TreeView Name="fileTreeView"></TreeView>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">
            <TextBox TextWrapping="Wrap" Name="recipeInfo"></TextBox>
        </Border>
    </Grid>
</Window>
